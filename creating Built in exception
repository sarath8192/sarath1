class ThrowableDemo {
    static void show() {
        try {
            throw new NullPointerException("down");
        } catch (NullPointerException ae) {
            System.out.println(ae);
        } catch (ArrayIndexOutOfBoundsException aie) {
            System.out.println(aie);
        }
    }

    public static void main(String[] args) {
        show();
    }
}
